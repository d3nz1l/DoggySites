@using CliftonAgility.Helpers
@model IEnumerable<string>
@{
    ViewBag.Title = "Email Previews";
}


<h2>Email Previews</h2>
<div class="row">
    @foreach (var email in Model)
    {
        <div class="col-md-3">
            <h4>@email.ToTitleFromCamel()</h4>
            <a class="btn btn-sm btn-default" href="@Url.Action(email, "EmailPreview", new { format = "text"})">Text</a>
            <a class="btn btn-sm btn-default" href="@Url.Action(email, "EmailPreview", new { format = "html" })">HTML</a>
        </div>
    }
</div>