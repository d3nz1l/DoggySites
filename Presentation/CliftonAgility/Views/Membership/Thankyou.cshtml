@using System.Globalization
@using CliftonAgility.Helpers
@model CliftonAgility.Models.Membership.EnquiryForm

@{
    ViewBag.Title = "Membership Confirmation";
    ViewBag.HeaderText = "Want to become a member?";
}

<div class="row">
    <div class="col-md-8">

        <h2>Membership Confirmation</h2>

        <p>
            <b>Thank you for your interest in the club.</b>
        </p>
        <p>
            Your membership request has been sent and the membership co-ordinator will be in touch with you shortly. A copy of your request is below, if you see anything wrong, please let us know through the @Html.ActionLink("contact page", "Contact", "home")
        </p>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3">@Html.LabelFor(m => m.Forename)</label>
                <label class="col-sm-9">@Html.DisplayFor(m => m.Forename)</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3">@Html.LabelFor(m => m.Surname)</label>
                <label class="col-sm-9">@Html.DisplayFor(m => m.Surname)</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3">@Html.LabelFor(m => m.EmailAddress)</label>
                <label class="col-sm-9">@Html.DisplayFor(m => m.EmailAddress)</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3">@Html.LabelFor(m => m.TelephoneNumber)</label>
                <label class="col-sm-9">@Html.DisplayFor(m => m.TelephoneNumber)</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3">@Html.LabelFor(m => m.Address)</label>
                <label class="col-sm-9">@Html.DisplayFor(m => m.Address)</label>
            </div>
        </div>
        <div>
            <h4>Your Dogs</h4>
            @foreach (var dog in Model.MembersDogs)
            {
                <ul class="list-inline">
                    <li><label>@Html.DisplayFor(m => dog.PetName)</label></li>
                    @{
                var kcName = string.IsNullOrEmpty(dog.KennelClubName) ? string.Empty : string.Format(CultureInfo.CurrentCulture, "({0})", dog.KennelClubName);
                    }
                    <li><label>@Html.DisplayFor(m => kcName)</label></li>
                    <li><label>@Html.DisplayForEnum(m => dog.Breed)</label></li>
                </ul>
            }
        </div>
    </div>

    <div class="col-md-4">

        @Html.Partial("~/Views/Asides/_EmailUs.cshtml")

        @Html.Partial("~/Views/Asides/_ContactUs.cshtml")

        @Html.Partial("~/Views/Asides/_OurVenue.cshtml")
    </div>
</div>

