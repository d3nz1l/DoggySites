@using System.Globalization
@using CliftonAgility.Helpers
@model CliftonAgility.Models.Emails.MembershipRequest
Content-Type: text/html; charset=utf-8

<html>
<body>
    @Html.Partial("_SharedStyles")
    <p>Hi</p>
    <p>We have received a membership request from the website.</p>
    <p>A copy of the request is below.</p>
    <table>
        <tr>
            <th>Name:</th>
            <td>@string.Format(CultureInfo.CurrentCulture, "{0} {1}", Model.Forename, Model.Surname)</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Html.DisplayFor(m => m.EmailAddress)</td>
        </tr>
        <tr>
            <th>Phone:</th>
            <td>@Html.DisplayFor(m => m.PhoneNumber)</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Experience:</th>
            <td>@Html.DisplayForEnum(m => m.Experience)</td>
        </tr>
    </table>
    <h4>Their Dogs:</h4>
    <table>
        <tr>
            <th>Name</th>
            <th>KC Name</th>
            <th>Breed</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>KC Number</th>
        </tr>
        @foreach (var dog in Model.MembersDogs)
        {
            <tr>
                <td>@Html.DisplayFor(m => dog.PetName)</td>
                <td>@Html.DisplayFor(m => dog.KennelClubName)</td>
                <td>@Html.DisplayForEnum(m => dog.Breed)</td>
                <td>@Html.DisplayFor(m => dog.Gender)</td>
                <td>@Html.DisplayFor(m => dog.DateOfBirth)</td>
                <td>@Html.DisplayFor(m => dog.KennelClubNumber)</td>
            </tr>
        }
    </table>
    <p>
        Thank you,
    </p>
    <p>
        Clifton Agility Club
    </p>
</body>
</html>
